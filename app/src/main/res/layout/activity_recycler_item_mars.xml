<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/marsImageView"
        android:layout_width="@dimen/mars_image_view_width"
        android:layout_height="@dimen/mars_image_view_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_mars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/marsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mars_text_view_text"
        android:textSize="@dimen/mars_text_view_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/marsImageView"
        app:layout_constraintStart_toEndOf="@+id/marsImageView"
        app:layout_constraintTop_toTopOf="@+id/marsImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/marsDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/mars_description_text_view_padding"
        android:text="@string/mars_description_text"
        android:textColor="@color/mars_description_text_color"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marsImageView"
        tools:visibility="visible" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragHandleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/drag_handle_image_view_margin"
        android:tint="@color/cardview_shadow_start_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_hamburger" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/removeItemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/remove_item_image_view_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dragHandleImageView"

        app:srcCompat="@drawable/ic_archive" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_delimiter_height"
        android:background="@color/view_delimiter_background"
        app:layout_constraintBottom_toBottomOf="@+id/marsDescriptionTextView"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
